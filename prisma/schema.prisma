// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id
  name        String
  email       String    @unique
  password    String
  permissions String
  active      Boolean
  createdAt   DateTime
  updatedAt   DateTime?
  Token       Token[]
  Request     Request[]

  @@map("users")
}

model Request {
  id        String    @id
  user      User?     @relation(fields: [userId], references: [id])
  method    String
  route     String
  input     String    @db.LongText()
  output    String?   @db.LongText()
  status    Int?
  createdAt DateTime
  updatedAt DateTime?
  userId    String?

  @@map("requests")
}

model Token {
  id        String    @id
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @unique
  token     String    @db.LongText()
  createdAt DateTime
  updatedAt DateTime?

  @@map("tokens")
}

model Permission {
  id             String    @id
  method         String
  route          String    @unique
  permissionCode Int       @unique
  createdAt      DateTime
  updatedAt      DateTime?

  @@map("permissions")
}
